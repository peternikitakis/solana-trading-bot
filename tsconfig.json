{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "node16",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "lib": ["ES2020"] // Ensure Map and other ES2020 types are available
  },
  "include": ["src", "src/types.d.ts"],
  "exclude": ["node_modules"]
}