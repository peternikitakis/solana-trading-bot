{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "node16",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "lib": ["ES2020"],
    "types": ["node"] // Add Node.js types
    // Optional: Add baseUrl and paths for cleaner imports
    // "baseUrl": "src",
    // "paths": {
    //   "config/*": ["config/*"],
    //   "notifications/*": ["notifications/*"],
    //   "tracking/*": ["tracking/*"],
    //   "trading/*": ["trading/*"],
    //   "utils/*": ["utils/*"],
    //   "stats/*": ["stats/*"],
    //   "main/*": ["main/*"]
    // }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}